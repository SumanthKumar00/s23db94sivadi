extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let dogid = toShow._id
    - let dogname = toShow.dog_name
    - let dogcolor = toShow.dog_color
    - let dogage = toShow.adog_ge
    - let actionid = "/resource/dog/" + dogid
 
    script.
      let actionid = "#{actionid}"
 
    div
      div.row
        div(class='dogAttr mr-3') dog ID is:
          div #{dogid}
      div.row
        div(class='dogAttr mr-3') dog name is:
          div #{dogname}
      div.row
        div(class='dogAttr mr-3') dog color is:
          div #{dogcolor}
      div.row
        div(class='dogAttr mr-3') dog age is:
          div #{dogage}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
 
    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/dog'
      }
 
    script.
      function deleteOnid() {
        console.log("starting delete");
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded");
          window.location.href='/dog';
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error );
        });
      }
